<section class="header">

<a href="/login">Click here to Login!</a>

<h1 class="main-header">Robot Directory</h1>
<h2 class="main-header-two">Looking for someone to <a href="/jobseekers">hire?</a></h2>
<h2 class="main-header-two">Want to see <a href="/employed">employed bots?</a></h2>

</section>

<div class="robot-all">
  {{#each robot}}
      <div class="robot-profile">
        <img class="main-image" src="{{avatar}}" alt="">
        <a class="name-link" href="/profile/{{name}}">{{name}}</a>
        {{#if job}}
        <p class="robot-text">{{job}}, {{company}}</p>
        {{else}}
        <p class="robot-text">Avaliable for Hire</p>
        {{/if}}
      </div>
  {{/each}}
</div>
